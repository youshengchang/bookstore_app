<!DOCTYPE html>
<html>
<head>
  <title>BookstoreApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<header role="banner">
  <nav role="navigation" class="navbar navbar-default">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "Bookstore App", root_path, class: "navbar-brand" %>
      </div>
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <% if current_user && current_user.admin? %>
            <li class="active"><%= link_to "Authors", admin_authors_path %></li>
            <li><%= link_to "Publishers", admin_publishers_path %></li>
            <li><%= link_to "Books", admin_books_path %></li>
            <li><%= link_to "Users", admin_users_path %></li>
          <% end %>

          <li><%= link_to "Catalogs", catalogs_path %></li>

          <% unless current_user %>
            <li><%= link_to "Sign up", signup_path %></li>
            <li><%= link_to "Sign in", signin_path %></li>
          <% else %>
            <li><%= link_to "Sign out", session_path, method: :delete %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>
<main role="main">
  <div class='container'>
    
    <% flash.each do |name, msg| %>
      <div class="alert alert-<%= "#{name}"%>">
        <a href="#" class="close" data-dismiss='alert &#215;'></a>
        <%= content_tag :div, msg, :id => 'flash_#{name}' if msg.is_a(String)%>
      </div>
    <% end %>
    <div class='row'>

      <div class='col-md-9'>
        <% if content_for?(:sidebar) %>
          <div class='col-md-4 left'>
            <div id= 'left-content'>
              <%= yield :sidebar %>
            </div>
          </div>
          <div class='col-md-8 inner'>
            <div id='right-content'>
              <%= yield %>
            </div>
          </div>
        <% else %>
          <div class='col-md-10 col-md-offset-1 inner'>
            <div class='right-content'>
              <%= yield %>
            </div>
          </div>
        <% end %>
      </div>

      <div class='col-md-3'>
        <div id="cart">
          <%= render @cart if @cart %>
        </div>
      </div>

    </div>
  </div>
</main>
<div class='container'>
  <div class='row'>
    <div class='col-md-10 col-md-offset-1 footer'>
      <footer role="contentinfo">
        <p><small>Copyright &copy; Emmanuel Training Services</small></p>
      </footer>
    </div>
  </div>
</div>


</body>
</html>
