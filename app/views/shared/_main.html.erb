<main role="main">
  <div class='container'>
    <%= render 'shared/message' %>

    <div class='row'>

      <div class='col-md-9'>
        <% if content_for?(:sidebar) %>
          <div class='col-md-3'>
              <%= yield :sidebar %>
           </div>
          <div class='col-md-9'>
              <%= yield %>
          </div>
        <% else %>
          <div class='col-md-10 col-md-offset-1'>
              <%= yield %>
          </div>
        <% end %>
      </div>

      <div class='col-md-3'>
        <div id="cart">
          <%= render @cart if @cart %>
        </div>
      </div>

    </div>
  </div>
</main>